        	focused_workspace  #EDE0E9 #EDE0E9 #121212
        	active_workspace   #333333 #5f676a #F4CDD0
        	inactive_workspace #292c2e #292c2e #EDE0E9
        	urgent_workspace   #2f343a #900000 #ffffff
        	binding_mode       #2f343a #900000 #ffffff
    }
}
